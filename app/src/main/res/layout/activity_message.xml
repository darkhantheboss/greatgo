<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/MidnightBlue"
    android:gravity="top"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:layout_alignParentTop="true"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Silicon Steppe"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#f6f4ff" />

    <TextView
        android:layout_below="@+id/textView"
        android:id="@+id/usrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Имя"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#f6f4ff" />

    <ListView
        android:layout_below="@+id/usrName"
        android:layout_above="@+id/editText2"
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="200dp" />

    <EditText
        android:layout_above="@+id/gridone"
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_back"
        android:fontFamily="sans-serif-condensed"
        android:imeOptions="actionUnspecified"
        android:maxLines="1"
        android:singleLine="true" />

    <LinearLayout
        android:layout_above="@+id/selectGrid"
        android:layout_marginTop="8dp"
        android:id="@+id/gridone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_live_dark"
            android:fontFamily="sans-serif-condensed"
            android:text="Поделиться"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonSend"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/btn_live_dark"
            android:fontFamily="sans-serif-condensed"
            android:text="Отправить"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_above="@+id/imageView"
        android:layout_marginTop="8dp"
        android:id="@+id/selectGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_weight="1"
            android:id="@+id/buttonSelect"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_live_dark"
            android:fontFamily="sans-serif-condensed"
            android:text="История"
            android:textColor="#000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:layout_alignParentBottom="true"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"  />

</RelativeLayout>