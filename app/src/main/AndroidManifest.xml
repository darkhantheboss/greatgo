<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.s.s.siliconsteppe" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.s.s.siliconsteppe.data.CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:windowSoftInputMode="adjustResize"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.s.s.siliconsteppe.MainActivity"
            android:windowSoftInputMode="adjustResize"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.s.s.siliconsteppe.MessageActivity"
            android:label="@string/title_activity_msg" >
        </activity>
        <activity
            android:name="com.s.s.siliconsteppe.FileSharingActivity"
            android:label="@string/title_activity_file_sharing" >
        </activity>
        <activity
            android:name="com.s.s.siliconsteppe.filebrowser.FileChooser"
            android:label="@string/title_activity_file_chooser" >
        </activity>
        <activity
            android:name="com.s.s.siliconsteppe.PrivateChatActivity"
            android:label="@string/title_activity_private_chat"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
            android:name="com.s.s.siliconsteppe.ClientSelectActivity"
            android:label="@string/title_activity_client_select" >
        </activity>
        <activity
        android:name="com.s.s.siliconsteppe.ChatHistoryActivity"
        android:label="@string/title_activity_chat_history" >
    </activity>
        <activity
            android:name="com.s.s.siliconsteppe.HistoryViewActivity"
            android:label="@string/title_activity_history_view" >
        </activity>
    </application>

</manifest>
